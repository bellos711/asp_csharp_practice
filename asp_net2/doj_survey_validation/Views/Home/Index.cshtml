@using doj_survey_model.Models
@model Student

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="outercontainer">
        <div class="form-container">
            <form asp-action="Registering" asp-controller="Home" method="post">
                <h3>Success!</h3>
            <div class="form-group">
                <label asp-for="name">Name: </label>
                <input type="text" asp-for="name">
                <span asp-validation-for="name"></span>
            </div>

            <div class="form-group">
                <label asp-for="location">Location: </label>
                <select asp-for="location" >
                    <option value="Seattle">Seattle</option>
                    <option value="Denver">Denver</option>
                    <option value="Maryland">Maryland</option>
                </select>
                <span asp-validation-for="location"></span>
            </div>

            <div class="form-group">
                <label asp-for="language">Favorite Language: </label>
                <select asp-for="language" >
                    <option value="C#">C#</option>
                    <option value="Python">Python</option>
                    <option value="JavaScript">JavaScript</option>
                </select>
                <span asp-validation-for="language"></span>
            </div>

            <div class="form-group">
                <label id="block-label" asp-for="comment">Comment (optional): </label>
                <textarea asp-for="comment"  cols="50" rows="4"></textarea>
                <span asp-validation-for="comment"></span>
            </div>

            <button type="submit">Submit</button>
            </form>
        </div>
    </div>
</body>
</html>