@model Wedding
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <div class="row">
            <h3 class="text-left col-sm-6">Add a wedding</h3>
            <div class="text-right col-sm-6">
                <a href="/dashboard" ><h4>Dashboard</h4></a>
                <a href="/logout" ><h4>Logout</h4></a>
            </div>
        </div>

        <div class="row">
            
            <form asp-action="CreateWedding" asp-controller="Wedding" class="form col-sm-8 offset-sm-2">
                <div class="form-group">
                    <label class="form-label">Wedder One: </label>
                    <input asp-for="WedderOne" type="text" class="form-input">
                    <span asp-validation-for="WedderOne"></span>
                </div>

                <div class="form-group">
                    <label class="form-label">Wedder Two: </label>
                    <input asp-for="WedderTwo"  type="text" class="form-input">
                    <span asp-validation-for="WedderTwo"></span>
                </div>

                <div class="form-group">
                    <label class="form-label">Date: </label>
                    
                    <input asp-for="Date"  type="datetime-local" class="form-input">
                    <span asp-validation-for="Date"></span>
                </div>

                <div class="form-group">
                    <label class="form-label">Address: </label>
                    <input asp-for="Address"  type="text" class="form-input">
                    <span asp-validation-for="Address"></span>
                </div>

                <button type="submit" class="col-sm-2 offset-sm-5 btn btn-primary">Add Wedding</button>

            </form>
        </div>
        
    </div>
</body>
</html>