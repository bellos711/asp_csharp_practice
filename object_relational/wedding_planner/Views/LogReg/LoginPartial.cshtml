@model LoginUser

<form asp-action="Login" asp-controller="LogReg" class="form col-sm-6">
    <div class="form-group">
        <label class="form-label">Email: </label>
        <input asp-for="LoginEmail" type="text" class="form-input">
        <span asp-validation-for="LoginEmail"></span>
    </div>

    <div class="form-group">
        <label class="form-label">Password: </label>
        <input asp-for="LoginPassword"  type="text" class="form-input">
        <span asp-validation-for="LoginPassword"></span>
    </div>

    <button type="submit" class="col-sm-2 offset-sm-5 btn btn-primary">Login</button>
</form>