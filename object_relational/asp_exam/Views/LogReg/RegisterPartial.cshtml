@model User

<form asp-action="Register" asp-controller="LogReg" class="form col-sm-6 text-center p-2">
    <div class="form-group">
        <label class="form-label text-left">First Name: </label>
        <input asp-for="FirstName" type="text" class="form-input">
        <span class="d-block" asp-validation-for="FirstName"></span>
    </div>

    <div class="form-group">
        <label class="form-label text-left">Last Name: </label>
        <input asp-for="LastName"  type="text" class="form-input">
        <span class="d-block" asp-validation-for="LastName"></span>
    </div>

    <div class="form-group">
        <label class="form-label text-left">Email: </label>
        <input asp-for="Email"  type="text" class="form-input">
        <span class="d-block" asp-validation-for="Email"></span>
    </div>

    <div class="form-group">
        <label class="form-label text-left">Password: </label>
        <input asp-for="Password"  type="text" class="form-input">
        <span class="d-block" asp-validation-for="Password"></span>
    </div>

    <div class="form-group">
        <label class="form-label text-left">Confirm Password: </label>
        <input asp-for="ConfirmPassword" type="text" class="form-input">
        <span class="d-block" asp-validation-for="ConfirmPassword"></span>
    </div>

    <button type="submit" class="text-center w-40 btn btn-primary">Register</button>

</form>