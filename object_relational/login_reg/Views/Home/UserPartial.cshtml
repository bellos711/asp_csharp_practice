@model User


    <div class="form-group">
        <label class="form-label">First Name: </label>
        <input asp-for="FirstName" type="text" class="form-input">
        <span asp-validation-for="FirstName"></span>
    </div>

    <div class="form-group">
        <label class="form-label">Last Name: </label>
        <input asp-for="LastName"  type="text" class="form-input">
        <span asp-validation-for="LastName"></span>
    </div>

    <div class="form-group">
        <label class="form-label">Email: </label>
        <input asp-for="Email"  type="text" class="form-input">
        <span asp-validation-for="Email"></span>
    </div>

    <div class="form-group">
        <label class="form-label">Password: </label>
        <input asp-for="Password"  type="text" class="form-input">
        <span asp-validation-for="Password"></span>
    </div>

    <div class="form-group">
        <label class="form-label">Confirm Password: </label>
        <input asp-for="ConfirmPassword" type="text" class="form-input">
        <span asp-validation-for="ConfirmPassword"></span>
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
